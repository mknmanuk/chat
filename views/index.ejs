<html lang="en">
    <head>
        <link rel="stylesheet" href="/public/style.css" />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css"
            integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
            crossorigin="anonymous"
        />

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>

        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Chat</title>
    </head>
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/">Chat</a>
                    </div>
                    <ul class="nav navbar-nav navbar-right">
                        <li></li>
                    </ul>
                    <% if(typeof username !== 'undefined'){ %>
                    <a
                        href="/logout"
                        class="btn btn-danger navbar-btn pull-right"
                    >
                        <div class="asd">Sign out</div>
                    </a>
                    <div class="user_div">
                        <%= (typeof username !== 'undefined') ? username : '' %>
                        <span class="glyphicon">&#xe008;</span>
                    </div>
                    <% }else{ %>
                    <a
                        href="/login"
                        class="btn btn-success navbar-btn pull-right"
                    >
                        Sign in
                    </a>
                    <% } %>
                </div>
            </div>
        </nav>

        <div class="container">
            <div class="page-content page-container" id="page-content">
                <div class="padding">
                    <div class="row container d-flex justify-content-center">
                        <div class="col-md-6 chat_div">
                            <div class="card card-bordered">
                                <div class="card-header">
                                    <h4 class="card-title">
                                        <strong> Chat </strong>
                                    </h4>
                                    <div class="col-md-4">
                                        <select
                                            id="users_select"
                                            class="form-control"
                                        >
                                            <option value="">
                                                -select user-
                                            </option>
                                        </select>
                                        <input
                                            type="hidden"
                                            class="col-xs-4 form-control"
                                            name="input_name"
                                            placeholder="Enter your name"
                                            value="<%= (typeof username !== 'undefined') ? username : '' %>"
                                            disabled
                                        />
                                        <input
                                            type="hidden"
                                            class="col-xs-4 form-control"
                                            name="input_id"
                                            placeholder="Enter your name"
                                            value="<%= (typeof user_id !== 'undefined') ? user_id : '' %>"
                                            disabled
                                        />
                                    </div>
                                </div>

                                <div
                                    class="ps-container ps-theme-default ps-active-y"
                                    id="chat_content"
                                    style="
                                        overflow-y: scroll !important;
                                        height: 400px !important;
                                    "
                                ></div>

                                <div class="publisher bt-1 border-light">
                                    <input
                                        id="input_message"
                                        class="publisher-input"
                                        type="text"
                                        placeholder="Write something"
                                        disabled
                                    />
                                    <a
                                        class="publisher-btn"
                                        href="#"
                                        data-abc="true"
                                        ><i class="fa fa-smile"></i
                                    ></a>
                                    <a
                                        class="publisher-btn text-info"
                                        href="#"
                                        data-abc="true"
                                        ><i class="fa fa-paper-plane"></i
                                    ></a>
                                    <button
                                        id="input_send"
                                        class="btn btn-xm btn-primary"
                                        href="#"
                                        data-abc="true"
                                        disabled
                                    >
                                        Send
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            var sender_id = "";
            var receiver_id = "";
            fetch("/users")
                .then((resp) => resp.json())
                .then((resp) => {
                    // console.log(resp);
                    for (i = 0; i < resp.length; i++) {
                        $("#users_select").append(
                            new Option(resp[i].username, resp[i].id)
                        );
                    }
                });

            $("#users_select").on("change", function () {
                let select_val = $(this).val();
                if (select_val != "") {
                    $("#input_send").prop("disabled", false);
                    $("#input_message").prop("disabled", false);

                    sender_id = $('input[name="input_id"]').val();
                    receiver_id = select_val;
                    // console.log('sender_id->'+sender_id)
                    // console.log('receiver_id->'+receiver_id)

                    let conversation_id =
                        sender_id < receiver_id
                            ? sender_id + "-" + receiver_id
                            : receiver_id + "-" + sender_id;
                    fetch("/load_data/" + conversation_id)
                        .then((resp) => resp.json())
                        .then((resp) => {
                            $("#chat_content").html("");
                            for (i = 0; i < resp.length; i++) {
                                add_to_chat(resp[i].sender, resp[i].text, resp[i].sent_at);
                            }
                        });
                } else {
                    $("#input_send").prop("disabled", true);
                    $("#input_message").prop("disabled", true);
                }
            });
        </script>
        <script type="" src="/public/chat.js"></script>
    </body>
</html>
